{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "maxNodeModuleJsDepth": 15,
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@tools/*": ["src/tools/*"],
      "@classes/*": ["src/classes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@data/*": ["src/data/*"],
      "@app/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
